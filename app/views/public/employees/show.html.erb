
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @employee.get_profile_image(300, 300) %>
    </div>
    <div class="col-md-8">
      <div>名前:　<%= @employee.full_name %></div>
      <div>フリガナ：<%= @employee.full_name_furigana %></div>
      <div>誕生日：<%= @employee.birthdate.strftime("%-m月%-d日") %></div>
      <div>出身地：<%= @employee.prefecture %></div>
      <div>メールアドレス：<%= @employee.email %></div>
      <div>部署：<%= @employee.department.name %></div>
      <div>入社日：<%= l @employee.created_at, format: :date %></div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 border">
      <% if @employee.introduction.size == 0 %>
        <h4>登録内容変更ボタンから自己紹介文を設定しましょう！</h4>
      <% else %>
        <%= @employee.introduction %>
      <% end %>
    </div>
    <% if @employee == current_employee %>
      <%= link_to "登録内容を変更する", edit_employee_path(@employee), class: "rounded-btn rounded-btn--edit" %>
    <% end %>
  </div>
  
  <div class="tabs">
    <input id="employee-articles" type="radio" name="tabs__item" checked>
    <label class="tabs__item" for="employee-articles"><%= @employee.full_name %>さんの投稿一覧</label>
    <% if @employee == current_employee %>
      <input id="favorite-articles" type="radio" name="tabs__item">
      <label class="tabs__item" for="favorite-articles">いいねした投稿一覧</label>
    <% end %>
    <input id="groups" type="radio" name="tabs__item">
    <label class="tabs__item" for="groups">参加中のグループ一覧</label>
    
    <div class="tabs__content" id="employee-articles_content">
      <%= render partial: "public/articles/article_index", collection: @my_articles, as: "article" %>
    </div>
    
    <div class="tabs__content" id="favorite-articles_content">
      <%= render partial: "public/articles/article_index", collection: @favorite_articles, as: "article" %>
    </div>
    
    <div class="tabs__content" id="groups_content">
      <%= render partial: "public/groups/group_index", collection: @groups, as: "group" %>
    </div>
  </div>

