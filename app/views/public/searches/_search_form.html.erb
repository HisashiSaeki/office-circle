<%= form_with url: search_path, method: :get, local: false do |f| %>
  <%= f.search_field :keyword,value: @keyword, placeholder: "キーワードを入力" %>
  <% if current_page?(employees_path) || current_page?(admin_employees_path) %>
    <%= f.submit "検索", name: "employee" %> 
  <% elsif current_page?(articles_path) || current_page?(admin_articles_path) %>
    <%= f.submit "検索", name: "article" %> 
  <% else %>
    <%= f.submit "検索", name: "group" %> 
  <% end %>
<% end %>
 