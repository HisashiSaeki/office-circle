<% if current_page?(employees_path) || current_page?(admin_employees_path) %>
  <%= form_with url: employees_search_path, method: :get, local: false, data: {"turblinks" => false} do |f| %>
    <%= f.search_field :keyword, value: @keyword, placeholder: "キーワードを入力" %>
    <%= f.submit "検索" %>
  <% end %>
<% elsif current_page?(articles_path) %>
  <%= form_with url: articles_search_path, method: :get, local: false, data: {"turblinks" => false} do |f| %>
    <%= f.search_field :keyword, value: @keyword, placeholder: "キーワードを入力" %>
    <%= f.submit "検索" %>
  <% end %>
<% else %>
  <%= form_with url: groups_search_path, method: :get, local: false, data: {"turblinks" => false} do |f| %>
    <%= f.search_field :keyword, value: @keyword, placeholder: "キーワードを入力" %>
    <%= f.submit "検索" %>
  <% end %>
<% end %>