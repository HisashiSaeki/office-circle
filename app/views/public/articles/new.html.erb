<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @article do |f| %>
      <div class="field">
        <%= f.label :title, "1.タイトルを入力してください" %></br>
        <%= f.text_field :title, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :body, "2.本文を入力してください" %></br>
        <%= f.text_field :body %>
      </div>
      <!--<div class="field">-->
      <!--</div>-->
      <div class="field">
        <%= f.submit "投稿する", name: "post", class: "btn btn-success" %>
        <%= f.submit "下書き保存する", name: "draft", class: "btn btn-danger" %>
      </div>
      <% end %>
    </div>
  </div>
</div>