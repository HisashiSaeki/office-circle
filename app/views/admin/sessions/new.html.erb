<div class="form-group">
  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <%= render "admin/shared/error_messages", resource: f.object %>
    <div class="form form--session">
      <p class="form__item"><%= f.label :email, "メールアドレス" %></p>
      <p class="form__item"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-text" %></p>
    </div>
    <div class="form form--session">
      <p class="form__item"><%= f.label :password, "パスワード" %></p>
      <p class="form__item"><%= f.password_field :password, autocomplete: "current-password", class: "form-text" %></p>
    </div>
    <div class="form-group__btn">
      <%= f.submit "ログイン", class: "rounded-btn" %>
    </div>
  <% end %>
</div>
