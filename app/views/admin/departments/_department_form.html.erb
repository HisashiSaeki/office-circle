<% if current_page?(action: "index") %>
  <%= form_with model: department, url: admin_departments_path, method: :post do |f| %>
  <div class="form form--center">
    <p class="form__item"><%= f.text_field :name, autofocus: true, placeholder: "部署名を入力", class: "form-text" %></p>
    <%= f.submit "登録", class: "rounded-btn" %>
  </div>
  <% end %>
<% else %>
  <%= form_with model: department, url: admin_department_path, method: :patch do |f| %>
  <div class="form form--center">
    <p class="form__item"><%= f.text_field :name, autofocus: true, placeholder: "部署名を入力", class: "form-text" %></p>
    <%= f.submit "登録", class: "rounded-btn" %>
  </div>
  <% end %>
<% end %>


